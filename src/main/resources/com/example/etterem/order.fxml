<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="275.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.etterem.OrderController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
      <Label text="Rendelés részletei" />

    <HBox spacing="20.0">
        <VBox alignment="TOP_CENTER" spacing="10.0">
         <HBox alignment="CENTER" spacing="10.0">
            <children>
               <Label fx:id="table" text="Asztal: " />
               <Label fx:id="status" layoutX="10.0" layoutY="10.0" text="Státusz: " />
            </children>
         </HBox>
         <Label fx:id="priceText" text="Összesített ár: " />
            <ListView fx:id="menuListView" />
            <Button onAction="#markAsCompletedClick" text="Megjelölés készként" />
            <Button onAction="#onBackToMainClick" text="Vissza" />
        </VBox>
    </HBox>
</VBox>
