<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="600.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.etterem.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <HBox alignment="TOP_CENTER" spacing="20.0">
        <VBox alignment="TOP_CENTER" prefWidth="300.0" spacing="10.0">
            <Label text="Étlap">
            <font>
               <Font name="System Bold" size="24.0" />
            </font></Label>
            <TableView fx:id="menuListView">
            </TableView>
         <Label text="Asztal száma">
            <font>
               <Font size="18.0" />
            </font></Label>
         <TextField fx:id="tableNumber" />
            <Button onAction="#onPlaceOrderClick" prefWidth="300.0" style="-fx-background-color: #12c432;" text="Rendelés leadása" textFill="WHITE">
            <font>
               <Font name="System Bold" size="14.0" />
            </font></Button>
            <Button onAction="#onBackToMainClick" prefWidth="300.0" text="Vissza">
            <font>
               <Font name="System Bold" size="14.0" />
            </font></Button>
        </VBox>
    </HBox>
</VBox>
